{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2020",
        "noEmit": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "vendor",
        "types"
    ]
}
