{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2022",
        "noEmit": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"],
    "exclude": ["node_modules", "vendor", "types"]
}
