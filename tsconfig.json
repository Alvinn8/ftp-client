{
    "compilerOptions": {
        "module": "ES2020",
        "target": "ES2017",
        "noEmit": true,
        "jsx": "react",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "*": [ "./server/node_modules/*" ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "vendor",
        "node_modules/**/*",
        "types"
    ]
}
